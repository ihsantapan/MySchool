@model UpdateTeacherDto

@{
    ViewData["Title"] = "UpdateTeacher";
    Layout = "~/Areas/Director/Views/DirectorLayout/Index.cshtml";
}


<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Öğretmen Güncelleme Sayfası</h4>
                <p>Öğretmen güncelleme işlemini aşağıdaki panel üzerinden gerçekleştirebilirsiniz.</p>
                <div class="bs-example" data-example-id="bordered-table">

                    <form method="post">
                        <input type="hidden" asp-for="TeacherId" />
                        @* <label>Öğretmen ID</label>
                        <input type="text" class="form-control" asp-for="TeacherId" /> *@
                        <label>Öğretmen Adı</label>
                        <input type="text" class="form-control" asp-for="FirstName" />
                        <label>Öğretmen Soyadı</label>
                        <input type="text" class="form-control" asp-for="LastName" />
                        <label>Öğretmen E-Mail Adresi</label>
                        <input type="text" class="form-control" asp-for="Email" />
                        <label>Okul ID</label>
                        <input type="text" class="form-control" asp-for="SchoolId" />
                        <br />
                        <button class="btn btn-primary">Öğretmen Güncelle</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</section>