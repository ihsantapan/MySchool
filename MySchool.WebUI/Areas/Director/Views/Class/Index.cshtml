@model List<ResultClassDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Director/Views/DirectorLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Sınıf Listesi</h4>
                <p>Sınıf ile ilgili işlemleri aşağıdaki tablo üzerinden gerçekleştirebilirsiniz.</p>
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Sınıf ID</th>
                                <th>Sınıf Adı</th>
                               
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ClassId</td>
                                    <td>@item.ClassName</td>                                   
                                    <td><a href="/Director/Class/DeleteClass/@item.ClassId" class="btn btn-warning">Sil</a></td>
                                    <td><a href="/Director/Class/UpdateClass/@item.ClassId" class="btn btn-danger">Güncelle</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                    <a href="/Director/Class/CreateClass" class="btn btn-primary">Yeni Sınıf Ekle</a>

                </div>
            </div>
        </div>

    </div>
</section>

